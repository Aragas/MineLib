@using Microsoft.AspNetCore.Identity
@using MineLib.Server.Heartbeat.Models

@inject SignInManager<User> SignInManager

@model IEnumerable<MineLib.Server.Heartbeat.Infrastructure.Data.ClassicServer>

@{
    ViewData["Title"] = "Servers";
}

<h2>Classic Servers</h2>
@if (SignInManager.IsSignedIn(User))
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Port)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hash)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Players)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxPlayers)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Added)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Port)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hash)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Players)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxPlayers)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Added)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Players)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxPlayers)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Added)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Players)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxPlayers)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Added)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}