    <ProjectReference Include="$(SolutionDir)\MineLib\Libraries\Protocol\MineLib.Protocol\MineLib.Protocol.csproj" />
    <ProjectReference Include="..\..\..\Aragas.QServer.Prometheus\Aragas.QServer.Prometheus.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Protocol\Legacy\" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Translation\Strings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="logo-0.png" />
    <EmbeddedResource Include="logo-1.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="App.Metrics" Version="4.0.0-preview1.0.3" />
    <PackageReference Include="App.Metrics.Extensions.DependencyInjection" Version="4.0.0-preview1.0.3" />
    <PackageReference Include="App.Metrics.Extensions.Hosting" Version="4.0.0-preview1.0.3" />
    <PackageReference Include="App.Metrics.Formatters.Prometheus" Version="4.0.0-preview1.0.3" />
    <PackageReference Include="App.Metrics.Health" Version="3.2.0" />
    <PackageReference Include="App.Metrics.Health.Checks.Network" Version="3.2.0" />
