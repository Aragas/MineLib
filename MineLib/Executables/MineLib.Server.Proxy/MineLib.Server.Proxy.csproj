  </ItemGroup>

  <ItemGroup>
    <Folder Include="Protocol\Legacy\" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Translation\Strings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="logo-0.png" />
    <EmbeddedResource Include="logo-1.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="App.Metrics" Version="4.0.0-preview1.0.3" />
