{
  "MineLib": {
    "MaxConnections": 1000,
    "Name": "MineLib Server",
    "Description": "Scalable C# Server",
    "NettyLegacyPingEnable": "true",
    "NettyLegacyPingProtocol": 61
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  },

  "AllowedHosts": "*"
}
