{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Loki", "Aragas.QServer.Logging", "Serilog.Exceptions" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithApplicationInfo", "WithExceptionDetails", "WithLogLevel" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "LokiHttp",
        "Args": {
          "serverUrl": "http://loki:3100"
        }
      }
    ]
  }
}